@model List<WorkScheduler.Data.WorkDTO>

@{
    ViewData["Title"] = "Index";
}

<style>
tr.htmx-swapping td {
  opacity: 0;
  transition: opacity 1s ease-out;
}
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].DeadLine)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Assignee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Updated)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeadLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assignee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated)
            </td>
            <td>

                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <button class="btn btn-link"
                        hx-post="Home/Delete/@item.Id"
                        hx-target="closest tr" hx-swap="outerHTML swap:1s">
                    Delete
                </button>
                @* hx-confirm="Are you sure?" *@
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts
{
    <script src="~/lib/htmx/htmx.min.js"></script>
}
